<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Lista de Feedbacks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <div class="container mt-5">
    <h1 class="mb-4">Lista de Feedbacks</h1>

    <table class="table table-striped table-bordered table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Título</th>
          <th>Tipo</th>
          <th>Status</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% feedbacks.forEach(feedback => { %>
          <tr class="<%= feedback.status === 'finalizado' ? 'text-decoration-line-through' : '' %>">
            <td><%= feedback.id %></td>
            <td class="<%= feedback.status === 'finalizado' ? 'text-decoration-line-through' : '' %>"><%= feedback.titulo %></td>
            <td class="<%= feedback.status === 'finalizado' ? 'text-decoration-line-through' : '' %>"><%= feedback.tipo %></td>
            <td class="<%= feedback.status === 'finalizado' ? 'text-decoration-line-through' : '' %>"><%= feedback.status %></td>
            <td>
              <a href="/feedbacks/<%= feedback.id %>" class="btn btn-sm btn-primary">Detalhes</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
